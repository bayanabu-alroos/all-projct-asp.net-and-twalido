@model Laptop
@{
    ViewData["Title"] = "AddLaptop";
}

<div class="container">
    <div class="row">
        <div class="col-6 offset-3 border border-dark p-4 rounded">
            <h1 class="text-center text-info">Upload Add Laptop </h1>
            <form method="post" asp-action="AddLaptop" enctype="multipart/form-data">
                <div asp-validation-summary="All" class=" alert-danger"></div>
                <div class="form-group m-2">
                    <label asp-for="Brand"></label>
                    <input type="text" class="form-control" placeholder="Enter brand name " asp-for="Brand">
                </div>
                <div class="form-group m-2">
                    <label asp-for="Description"></label>
                    <input type="text" class="form-control" placeholder="Enter Brand  Description " asp-for="Description">
                </div>
                <div class="row m-2">
                    <div class="col-8">
                        <label asp-for="ImagePath"></label>
                        <input type="file" class="form-control" asp-for="ImagePath">
                    </div>
                    <div class="col-4">
                        <img src="https://placehold.jp/150*150.png" style=" width:100px;height:100px ;border:1px solid red;
                        border-radius:10px;padding:10px;" alt="Laptop Image"/>
                    </div>
                </div>
                <div class="form-group m-2">
                    <input type="submit" class="btn btn-group-sm btn-primary float-end" value="Submit" />
                </div>
            </form>
            <a class="btn btn-outline-danger btn-sm p-2 m-2" asp-action="Index" asp-controller="Laptop">Back to List </a>
        </div>
    </div>
</div>

